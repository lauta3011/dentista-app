{
  "name": "dentista-electron-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.3",
    "sqlite3": "^4.0.2",
    "web-vitals": "^1.0.1"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build":{
    "appId": "dentista.electron",
    "productName": "Gestion Odontologica",
    "copyright": "Todos los derechos reservados a Lautaro Rodriguez, el plagio esta mal y es de giles come seco",
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "./db/",
        "to": "db/",
        "filter": [ "**/*" ]
      }
    ],
    "win": 
      {
        "icon": "./build/images/icon-dentista.png",
        "target": ["7z"]
      }
  },
  "scripts": {
    "start-react": "react-scripts start",
    "build-react": "react-scripts build",
    "start-electron": "nodemon --watch ./public/* --exec \"electron .\"",
    "dev": "concurrently \"SET BROWSER=none && yarn start-react\" \"wait-on http://localhost:3000 && yarn start-electron\" \" yarn imagenes \" ",
    "postinstall": "electron-builder install-app-deps",
    "pack-app": "yarn build-react && electron-builder --dir",
    "build": "yarn build-react && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "imagenes": "http-server .\\public\\imgs"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "nodemon": "^2.0.7",
    "wait-on": "^5.3.0"
  }
}
